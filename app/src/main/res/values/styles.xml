<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Colors for splash screen -->
    <color name="splash_background_start">#000000</color>
    <color name="splash_background_end">#2A0066</color>
    <color name="splash_text_start">#00FF00</color>
    <color name="splash_text_end">#FFFFFF</color>
    <color name="splash_text_secondary_start">#80FF80</color>
    <color name="splash_text_secondary_end">#B4FFFFFF</color>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/splash_background_start</item>
        <item name="android:statusBarColor">@color/splash_background_start</item>
        <item name="android:navigationBarColor">@color/splash_background_start</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
